<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="720.0" prefWidth="1080.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.healthcareprojectwebsite.DashboardController">

    <left>
        <VBox prefHeight="720.0" prefWidth="250.0" style="-fx-background-color: #2c3e50;" BorderPane.alignment="CENTER">
            <children>
                <Label text="HealthCare Pro" textFill="WHITE">
                    <font>
                        <Font name="Segoe UI Bold" size="24.0" />
                    </font>
                    <VBox.margin>
                        <Insets bottom="40.0" left="20.0" top="30.0" />
                    </VBox.margin>
                </Label>
                <Button mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="Dashboard">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
                <Button layoutX="10.0" layoutY="102.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: #34495e; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="Patients Record">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="16.0" />
                    </font>
                </Button>
                <Button layoutX="10.0" layoutY="152.0" mnemonicParsing="false" prefHeight="50.0" prefWidth="250.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-alignment: BASELINE_LEFT;" text="Appointments">
                    <padding>
                        <Insets left="30.0" />
                    </padding>
                    <font>
                        <Font size="16.0" />
                    </font>
                </Button>
            </children>
        </VBox>
    </left>

    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" style="-fx-background-color: #ecf0f1;" BorderPane.alignment="CENTER">
            <children>
                <Label text="Patient Management" textFill="#2c3e50">
                    <font>
                        <Font name="Segoe UI Light" size="32.0" />
                    </font>
                    <VBox.margin>
                        <Insets left="30.0" top="30.0" />
                    </VBox.margin>
                </Label>

                <HBox spacing="15.0">
                    <children>
                        <TextField fx:id="fNameField" promptText="First Name" style="-fx-pref-height: 40;" />
                        <TextField fx:id="lNameField" promptText="Last Name" style="-fx-pref-height: 40;" />
                        <TextField fx:id="emailField" promptText="Email Address" style="-fx-pref-width: 250; -fx-pref-height: 40;" />
                        <Button mnemonicParsing="false" onAction="#handleAddPatient" style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-pref-height: 40;" text="Add New Patient" />
                    </children>
                    <padding>
                        <Insets left="30.0" top="20.0" />
                    </padding>
                </HBox>

                <TableView fx:id="patientTable" prefHeight="500.0" prefWidth="780.0" style="-fx-background-radius: 5;">
                    <columns>
                        <TableColumn fx:id="colFirstName" prefWidth="150.0" text="First Name" />
                        <TableColumn fx:id="colLastName" prefWidth="150.0" text="Last Name" />
                        <TableColumn fx:id="colEmail" prefWidth="250.0" text="Email" />
                        <TableColumn fx:id="colHistory" prefWidth="200.0" text="Medical History" />
                    </columns>
                    <VBox.margin>
                        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
                    </VBox.margin>
                </TableView>
            </children>
        </VBox>
    </center>
</BorderPane>